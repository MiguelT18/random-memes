---
import { LeftArrowIcon, RightArrowIcon } from './Icons'

const response = await fetch('https://meme-api.com/gimme')
const data = await response.json()
---

<article id='article' class='bg-slate-800 rounded-xl py-6 px-4 w-fit mx-auto'>
	<div class='flex items-center gap-3 cursor-pointer w-fit'>
		<img
			src='https://randomuser.me/api/portraits/lego/6.jpg'
			alt='User profile'
			class='w-12 h-12 rounded-full object-contain'
		/>
		<p class='text-sm font-bold'>
			{data.author}
			<br />
			<span class='text-sm font-normal text-gray-400 hover:underline'>
				@{data.author}
			</span>
		</p>
	</div>
	<div>
		<p class='my-3 w-fit'>{data.title}.</p>
		<img
			id='memeImage'
			class='MemeImage'
			src={data.url}
			alt='Random randomMeme'
		/>
		<hr class='mt-10' />
	</div>
	<form class='flex justify-around mt-5'>
		<button id='dislike'>
			<LeftArrowIcon />
		</button>
		<button id='like'>
			<RightArrowIcon />
		</button>
	</form>
</article>

<style>
	button {
		border-radius: 100%;
	}

	#like:hover {
		transition: all 0.2s ease-out;
		scale: 1.1;
		box-shadow: 0px 0px 10px 2px rgba(3, 255, 0, 0.8);
	}
	#like:active {
		scale: 0.9;
		box-shadow: 0px 0px 2px 0px rgb(3, 255, 0, 0.8);
	}

	#dislike:hover {
		transition: all 0.2s ease-out;
		scale: 1.1;
		box-shadow: 0px 0px 15px 2px rgba(255, 0, 0, 0.8);
	}
	#dislike:active {
		scale: 0.9;
		box-shadow: 0px 0px 2px 0px rgba(255, 0, 0, 0.8);
	}

	.MemeImage {
		max-width: 520px;
		margin-top: 14px;
		margin: 0 auto;
		object-fit: con;

		animation: reveal-image 0.7s;
	}
	@keyframes reveal-image {
		from {
			opacity: 0;
			scale: 0.2;
		}
		to {
			opacity: 1;
			scale: 1;
		}
	}
</style>
